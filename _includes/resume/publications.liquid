<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
    <!-- International Conference 문구 추가 -->
    <li class="card-text font-weight-light list-group list-group-flush" style="background-color: none;">
      International Conference
    </li>

    {% for content in publications %}
      {% if content.type == 'international conference' %}
        <li class="list-group-item">
          <div class="row">
            <div class="col-xs-2 cl-sm-2 col-md-2 text-center" style="width: 75px">
              {% if content.releaseDate %}
                {% assign date = content.releaseDate | split: '-' | join: '.' %}
              {% else %}
                {% assign date = '' %}
              {% endif %}
              <table class="table-cv">
                <tbody>
                  <tr>
                    <td>
                      <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ content.publisher }}</span>  
                      <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ date }}</span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
              <h6 class="title font-weight-bold ml-1 ml-md-4">
                <a href="{{ content.url }}">{{ content.name }}</a>
              </h6>
              <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.author }}</h6>
              <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
              {% if content.addition %}
                <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; color: gray">{{ content.addition }}</h6>
              {% endif %}
            </div>
          </div>
        </li>
      {% endif %}
    {% endfor %}

